# SastoMahango Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Environment
APP_ENV=production
APP_DEBUG=false

# Database Configuration
DB_HOST=localhost
DB_NAME=sastomahango_db
DB_USER=sastomahango_user
DB_PASS=your_secure_password_here
DB_CHARSET=utf8mb4

# Site Configuration
SITE_NAME=SastoMahango
SITE_URL=https://sastomahango.com
SITE_EMAIL=contact@sastomahango.com

# Security
SESSION_LIFETIME=3600
CSRF_TOKEN_NAME=csrf_token
PASSWORD_MIN_LENGTH=8

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/www/uploads/items/

# Caching (Redis)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_ENABLED=true
CACHE_TTL=300

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@sastomahango.com
MAIL_FROM_NAME=SastoMahango

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_DECAY_MINUTES=15

# Logging
LOG_LEVEL=error
LOG_FILE=/var/log/mulyasuchi/app.log
